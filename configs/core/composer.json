{
    "name": "enjin/platform",
    "type": "project",
    "description": "Enjin Platform is the most powerful and advanced open-source framework for building NFT platforms.",
    "keywords": [
        "Enjin",
        "Platform",
        "Enjin Platform",
        "NFT",
        "Blockchain",
        "MultiTokens",
        "Substrate"
    ],
    "homepage": "https://github.com/enjin/platform",
    "license": "LGPL-3.0-only",
    "authors": [
        {
            "name": "Enjin",
            "email": "support@enjin.io"
        }
    ],
    "require": {
        "php": "^8.2|^8.3",
        "enjin/platform-core": "^1.9",
        "enjin/platform-beam": "^1.9",
        "enjin/platform-fuel-tanks": "^1.9",
        "enjin/platform-marketplace": "^1.9",
        "enjin/platform-ui": "^1.9",
        "guzzlehttp/guzzle": "^7.0",
        "laravel/framework": "^11.0",
        "laravel/horizon": "^5.0",
        "laravel/reverb": "@beta",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.0",
        "fakerphp/faker": "^1.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^11.0",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "build-sr25519": "cd vendor/gmajor/sr25519-bindings/go && go build -buildmode=c-shared -o sr25519.so . && mv sr25519.so ../src/Crypto/sr25519.so",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan horizon:publish --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
