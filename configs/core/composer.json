{
    "name": "enjin/platform",
    "type": "project",
    "description": "Enjin Platform is the most powerful and advanced open-source framework for building NFT platforms.",
    "keywords": [
        "enjin",
        "platform",
        "enjin platform",
        "enjin platform",
        "laravel"
    ],
    "homepage": "https://github.com/enjin/platform",
    "license": "LGPL-3.0-only",
    "authors": [
        {
            "name": "Enjin",
            "email": "support@enjin.io"
        }
    ],
    "require": {
        "php": "^8.1|^8.2",
        "enjin/platform-core": "dev-main",
        "enjin/platform-beam": "dev-main",
        "enjin/platform-fuel-tanks": "dev-main",
        "enjin/platform-marketplace": "dev-main",
        "guzzlehttp/guzzle": "^7.0",
        "laravel/framework": "^10.0",
        "laravel/horizon": "^5.0",
        "laravel/sanctum": "^3.0",
        "laravel/tinker": "^2.0",
        "beyondcode/laravel-websockets": "^1.0",
        "pusher/pusher-php-server": "^7.0",
        "amphp/amp": "^3.0",
        "amphp/parallel": "v2.1.0",
        "amphp/socket": "v2.0.0",
        "amphp/websocket": "v2.x-dev#1bdf01a",
        "amphp/http": "2.x-dev#b9f04ee",
        "amphp/http-client": "v5.x-dev#149cc0f",
        "amphp/websocket-client": "v2.x-dev#89f6a4a"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "fakerphp/faker": "^1.0",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^7.0",
        "phpunit/phpunit": "^10.0",
        "spatie/laravel-ignition": "^2.0"
    },
    "repositories": [{
            "type": "path",
            "url": "./packages/platform-core"
        },
        {
            "type": "path",
            "url": "./packages/platform-beam"
        },
        {
            "type": "path",
            "url": "./packages/platform-fuel-tanks"
        },
        {
            "type": "path",
            "url": "./packages/platform-marketplace"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan horizon:publish --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
